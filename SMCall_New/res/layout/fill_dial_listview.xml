<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imageViewId_type_fill_dial"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/ic_call_log_header_missed_call" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3.5"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textViewId_name_fill_dial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系人名字"
            android:textAppearance="?android:textAppearanceLarge" />

        <TextView
            android:id="@+id/textViewId_number_fill_dial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系人电话" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewId_date_fill_dial"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:text="通话时间" />

</LinearLayout>