<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_callphonee"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#33DDDDDD"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textViewId_ZT_CallingPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拨号状态"
            android:textColor="#DDDDDD"
            android:textSize="24dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="center"
        android:padding="38dp" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:src="@drawable/login_ico" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textViewId_phoneName_callingPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系人的名字"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewId_phoneNum_callingPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系人的手机号"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="系统正在为您拨叫，请注意接听。"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp" >

        <Button
            android:id="@+id/imageButtonId_FHH_CallingPhone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/haha"
            android:text="结束通话"
            android:textColor="#FFFFFF"
            android:textSize="24dp" />
    </LinearLayout>
</LinearLayout>